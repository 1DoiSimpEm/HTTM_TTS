<?xml version="1.0" encoding="utf-8"?>
   <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/myWork_audio_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/color_main"
        android:elevation="5dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_item_card">

        <RelativeLayout
            android:id="@+id/saveDone_itemImg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            android:background="@drawable/bg_card_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/audioItem_effectImg"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_audio_disk" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/null_audioItem_effectImg"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/ic_music_else"
                android:layout_centerInParent="true"
                />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="72dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/saveDone_itemImg"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:id="@+id/explorerItem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wdfsdfsdfsdfsdfsdf sdf sdf sdfsd fdsf sdf scf sfsdfsdfsd fdsf sdfsdfsÄ‘sfds"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/explorerItem_audioLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarm"
                android:layout_marginTop="8dp"
                android:textAlignment="viewStart"
                android:textColor="@color/unpicked_color"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/myWork_audio_item_threedots"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_three_dot"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />


    </androidx.constraintlayout.widget.ConstraintLayout>
